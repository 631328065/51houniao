/* components/active/active.wxss */
.title {
  width: 82.5%;
  margin: 0 auto;
  padding: 40rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.title .title_text view:nth-child(1) {
  font-size: 24px;
}

.title .title_text view:nth-child(2) {
  font-size: 14px;
  color: #858585;
}

.swiper {
  position: relative;
  top: -120rpx;
  left: 0;
}

.swiper_index {
  position: absolute;
  right: 80rpx;
  top: 0;
}

.swiper_index text:nth-child(1) {
  font-size: 48rpx;
}

.swiper swiper {
  position: absolute;
  left: 40rpx;
  min-width: 100%;
  height: 600rpx;
}

.swiper image {
  width: 668rpx;
  height: 354rpx;
}

.swiper swiper-item {
  padding-top: 100rpx;
}

.item_content {
  position: absolute;
  left: 0;
  bottom: 140rpx;
  width: 90%;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #858585;
}

.item_content>text {
  font-size: 12px;
}

.icon {
  height: 40rpx;
  line-height: 20rpx;
  display: inline-block;
  background: #e0e0e0;
  color: #484848;
  margin-left: 20rpx;
  padding: 0 16rpx 0 4rpx;
  border-radius: 4px;
}

.icon image {
  width: 18rpx;
  height: 20rpx;
  margin-right: 8rpx;
  margin-top: 6rpx;
}

.icon>text {
  font-size: 10px;
  margin-bottom: 10rpx;
}

.time {
  position: absolute;
  right: 0rpx;
  bottom: 50rpx;
  width: 168rpx;
  height: 64rpx;
  line-height: 72rpx;
  background: url(http://www.51houniao.com/wx/customer/classic/images/zhaomu.png) no-repeat;
  background-size: 100%;
  text-align: center;
  transform: rotate(-15deg);
}

.time>text {
  font-size: 12px;
  color: #33b3b4;
}

.price {
  font-size: 10px;
  color: #858585;
  margin: 0 10rpx 10rpx;
}

.price image {
  width: 24rpx;
  height: 28rpx;
}