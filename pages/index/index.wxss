/* pages/index/index.wxss */

/*推荐模板*/
@import '../templates/templates.wxss';

.header_icon {
  width: 750rpx;
  height: 181.8rpx;
  border-bottom: 8rpx solid #f2f2f2;
}

.header_icon image {
  width: 100%;
  height: 100%;
}

.tuijian {
  width: 750rpx;
  font-size: 18px;
  text-align: center;
  line-height: 99rpx;
  color: #858585;
  border-bottom: 1px solid #b9b9b9;
}

.tuijian text:nth-child(2) {
  border: 1px solid #b9b9b9;
  border-radius: 50%;
}

.sure {
  height: 80rpx;
  margin-top: 444rpx;
  padding: 40rpx 60rpx;
  box-sizing: border-box;
  font-size: 10px;
  display: flex;
  color: #333333;
}

.sure .item {
  flex: 1;
}

.sure .icon {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}

.sure .icon>image {
  width: 100%;
  height: 100%;
}